<fable>
  <property name="chave_colocada" default="false"/>
  <property name="porta_aberta" default="false"/>
  <page id="quarto" bg_color="#e8f5e9">
    <agent id="chave" x="50" y="50" image="block.png" width="50" height="50" draggable="true" on_drag="console.log('Arrastando chave...')"/>
    <agent id="porta" x="300" y="100" image="door_1.png" width="100" height="200" drop_accept="chave" on_drop="properties.chave_colocada = true; properties.porta_aberta = true"/>
    <agent id="mensagem-sucesso" x="50" y="300" text="A porta foi aberta!" font_size="24" color="#4CAF50" show_when="properties.chave_colocada && properties.porta_aberta"/>
    <agent id="instrucoes" x="50" y="350" text="Arraste a chave atÃ© a porta" font_size="18" color="#666" show_when="!properties.chave_colocada"/>
  </page>
</fable>